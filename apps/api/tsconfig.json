{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "es2018",
    "paths": {
      "@/resources/*" : ["resources/*"],
      "@/utils/*" : ["utils/*"],
      "@/middlewares/*" : ["middlewares/*"],
    },
  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "include": ["src"]
}
